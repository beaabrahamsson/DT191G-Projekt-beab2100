
@foreach (var item in ViewBag.Projects)
{
    
    <div class="col-md-4">
        <a asp-action="ProjectDetails" asp-route-id="@item.ID" class="card-link">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" decoding="async" src="@("~/image/"+item.ImageName)" asp-append-version="true" alt="Projekt bild">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@Html.Raw(item.Description.Substring(0, item.Description.Length > 100 ? 100 : item.Description.Length))...</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted"></small>
                </div>
            </div>
        </div>
        </a>
    </div>
    
 
}


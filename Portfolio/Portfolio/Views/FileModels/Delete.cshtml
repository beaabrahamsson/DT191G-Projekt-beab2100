@model Portfolio.Models.FileModel

@{
    ViewData["Title"] = "Ta bort";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ta bort</h1>

<h3>Vill du verkligen ta bort?</h3>
<div>
    <h4>Filer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">
            Uppladdad fil
        </dt>
        <dd class="col-sm-10">
            <embed src="~/file/@Html.DisplayFor(model => model.FileName)" width="200" height="250" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
